{
  "parserOpts": {
    // Allow returns in the module
    "allowReturnOutsideFunction": true
  },

  "env": {
    "ava": {
      "sourceMaps": "inline",
      "presets": [
        ["env", {
          "targets": {
            "node": "6"
          }
        }]
      ],
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    },

    "babel": {
      "presets": [
        ["env", {
          "targets": {
            "node": "6"
          }
        }]
      ],
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    }
  }
}
